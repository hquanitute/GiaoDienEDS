<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE5E8"
    android:orientation="vertical"
    tools:context=".Challengen">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="-------- You must speak --------"
        android:textColor="#426EB4"
        android:textSize="19dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/tv_Challengen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#FFFF"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="You have spoken here: "
        android:textStyle="italic|bold"
        android:textSize="18sp"
        />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/tvSpoken"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="tvSpoken"
            android:textSize="25dp"
            android:textColor="#DF0029"
            android:textStyle="bold"
            android:visibility="invisible" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/tvDiem"
            android:text="Chinh xac"
            android:gravity="center"
            android:textSize="26sp"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/buttonbolder"
            android:onClick="SendChallenge"
            android:text="Submit"
            android:drawableTop="@drawable/icon_submit"
            android:padding="10dp"
            android:textColor="#000000" />
    </LinearLayout>



    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/microphone" />

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Press me to repeat !"
        android:textColorHighlight="@color/colorPrimary"
        android:textStyle="bold" />


</LinearLayout>